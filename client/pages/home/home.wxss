/* 清除浮动 */
.clearfix:after{
	content: ".";
	display: block;
	clear: both;
	height: 0;
	overflow: hidden;
	visibility: hidden;
}
/* 页面样式 */
.page{
  width: 100%;
}
/* 头部的装饰 */
.top{
  position: relative;
  width: 100%;
  height: 352rpx;
}
.top .topimg{
  width: 100%;
  height: 352rpx;
}
.top .cover{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
}
.top .cover image{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 125rpx;
  height: 125rpx;
  transform: translate(-50%,-50%);
  border-radius: 50%;
}
.top .cover .adorn1{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 145rpx;
  height: 145rpx;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  border: 1rpx solid #475765;
}
.top .cover .adorn2{
  position: absolute;
  top: 50%;
  left: 50%;
  width: 170rpx;
  height: 170rpx;
  transform: translate(-50%,-50%);
  border-radius: 50%;
  border: 1rpx solid #37444F;
}

/* 内容 */
.list{
  width: 90%;
  margin: 30rpx auto 0;
}
.list .listItem{
  position: relative; 
  margin-bottom: 30rpx;
  height: 194rpx;
  font-size: 15px;
  background: #fff;
  color: #74848c;
  z-index: 9;
  transition: .3s;
}
.list .listItem .adrift{
  position: absolute; 
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  line-height: 46rpx;
  background: #fff;
  z-index: 9;
  transition: .3s;
}
.timeicon{
  display: inline-block;
  float: left;
  margin-right: 20rpx;
}
.list .listItem .time{
  float: right;
}
.list .listItem .conTitle{
  display: block;
  line-height: 60rpx;
  font-weight: 700;
  color: #1bbc9b;
}
.list .listItem .continer{
  overflow : hidden;
	text-overflow: ellipsis;
  word-break: break-all;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.delItem,.editItem{
  float: right;
  display: inline-block;
  width: 120rpx;
  height: 194rpx;
  line-height: 194rpx;
  text-align: center;
  font-size: 15px;
  color: #fff;
  z-index: 1;
}
.delItem{
  position: relative;
  background: #e97f6a;
}
.delItem .delican{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 100rpx;
  height: 100rpx;
}
.editItem{
  background: #1bbc9b;
}

/* 页面没有数据渲染的时候使用这个样式 */
.prompt{
  position: fixed;
  top: 50%;
  left: 50%;
  width: 80%;
  transform: translate(-50%,-50%);
  color: #74848c;
  font-size: 18px;
  text-align: center;
}

/* 底部的按钮 */
.add{
  position: fixed;
  display: inline-block;
  left: 50%;
  bottom: 40rpx;
  width: 130rpx;
  height: 130rpx;
  line-height: 130rpx;
  transform: translateX(-50%);
  font-size: 30px;
  text-align: center;
  border-radius: 50%;
  background: #1bbc9b;
  color: #fff;
  font-weight: 700;
  z-index: 999;
}